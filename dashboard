    <script>
        var mem = new XMLHttpRequest();
        var cpu = new XMLHttpRequest();
        var disk = new XMLHttpRequest();
        var net = new XMLHttpRequest();
        grab_mdata = function () {
            mem.open("GET", '/api/memstatus', true);
            mem.send();
        }
        grab_cdata = function () {
            cpu.open("GET", '/api/cpustatus', true);
            cpu.send();
        }
        grab_ddata = function () {
            disk.open("GET", '/api/diskinfo', true);
            disk.send();
        }
        grab_ndata = function () {
            net.open("GET", '/api/netstats', true);
            net.send();
        }
        grab_mdata();
        grab_cdata();
        grab_ddata();
        grab_ndata();
        mem.onreadystatechange = function () {
            if (this.readyState == 4) {
                if (this.status == 200) {
                    document.getElementById('mem').style.width = mem.responseText;
                    document.getElementById('mempost').innerHTML = "Memory Usage: " + mem.responseText;
                    setTimeout(grab_mdata, 1000);
                } else {
                    setTimeout(grab_mdata, 1000);
                }
            }
        };
        cpu.onreadystatechange = function () {
            if (this.readyState == 4) {
                if (this.status == 200) {
                    document.getElementById('cpu').style.width = cpu.responseText;
                    document.getElementById('cpupost').innerHTML = "CPU Usage: " + cpu.responseText;
                    setTimeout(grab_cdata, 1000);
                } else {
                    setTimeout(grab_cdata, 1000);
                }
            }
        };
        disk.onreadystatechange = function () {
            if (this.readyState == 4 && this.status == 200) {
                document.getElementById('diskpost').innerHTML = disk.responseText;
            }
        };
        net.onreadystatechange = function () {
            if (this.readyState == 4) {
                if (this.status == 200) {
                    document.getElementById('netpost').innerHTML = net.responseText;
                    setTimeout(grab_ndata, 1000);
                } else {
                    setTimeout(grab_ndata, 1000);
                }
            }
        };
    </script>
